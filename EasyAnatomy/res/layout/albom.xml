<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imgDisplay" android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" android:scaleType="fitCenter"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/right" android:layout_alignRight="@+id/imgDisplay"
            android:layout_alignBottom="@+id/imgDisplay" android:text=" " android:textSize="@dimen/albom_pointer_text"
            android:textStyle="bold" android:textColor="@color/white" android:alpha="0.5"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/left"
            android:textStyle="bold" android:textSize="@dimen/albom_pointer_text"
            android:textColor="@color/white" android:alpha="0.5" android:singleLine="false"
            android:layout_alignBottom="@+id/imgDisplay" android:layout_alignLeft="@+id/imgDisplay"/>
</RelativeLayout>